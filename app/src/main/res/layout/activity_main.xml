<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.splitx2mb.asteroides.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp">

        <TextView
            android:text="ASTEROIDES"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:id="@+id/textView2" />

        <Button
            android:layout_marginTop="10dp"

            android:text="@string/JUGAR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnJugar"
            android:background="@drawable/botonjugar" />

        <Button
            android:layout_marginTop="10dp"

            android:text="@string/CONFIGURAR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnConfigurar"
            android:background="@drawable/botonconfig" />

        <Button
            android:layout_marginTop="10dp"

            android:text="@string/ACERCA_DE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnAcercaDe"
            android:background="@drawable/botonacerca" />

        <Button
            android:layout_marginTop="10dp"
            android:text="@string/SALIR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnSalir"
            android:background="@drawable/botonsalir" />
    </LinearLayout>

</LinearLayout>
